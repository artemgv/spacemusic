# Переменные, которые в основном используются в app/django_project/settings.py

# меняет работу Django в режиме debug, в случае 1 сообщения об ошибках будут выводиться прямо в браузер
DEBUG=1

# ключ безопасности, который чаще всего имеет разное значение для локального запуска и продакшена
SECRET_KEY=foo

# имена или ip адреса хостов через пробел, которым разрешено подключиться к Django
ALLOWED_HOSTS=localhost 127.0.0.1 [::1]

# модуль для работы с базой
POSTGRES_ENGINE=django.db.backends.postgresql

# название базы
POSTGRES_DB=django_db

# пользователь
POSTGRES_USER=django_user

# пароль
POSTGRES_PASSWORD=django_password

# название контейнера
POSTGRES_HOST=db_dev

# порт
POSTGRES_PORT=5432

# любое другое значения DATABASE отключит проверку доступности базы в файле app/entrypoint
DATABASE=postgres

AAC_URL_PREFIX=http://192.168.0.12

